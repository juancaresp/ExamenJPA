<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">



 <persistence-unit name="examenjpa" transaction-type="RESOURCE_LOCAL">
 	<provider>org.hibernate.ejb.HibernatePersistence</provider>

	<!-- Coge sólo las clases que aparecen -->
	<class>org.dam2.examenjpa.modelo.Cliente</class>
	<class>org.dam2.examenjpa.modelo.Direccion</class>
	<class>org.dam2.examenjpa.modelo.Producto</class>
	<class>org.dam2.examenjpa.modelo.ProductoPerecedero</class>
	<class>org.dam2.examenjpa.modelo.ProductoNoPerecedero</class>
	<class>org.dam2.examenjpa.modelo.Proveedor</class>
	<class>org.dam2.examenjpa.modelo.Venta</class>
	<exclude-unlisted-classes>true</exclude-unlisted-classes>

	<!--  propiedades de la conexión a la BBDD -->
    <properties>
        <property name="connection.driver_class" value="org.h2.Driver"/>
        <property name="hibernate.connection.url" value="jdbc:h2:~/test"/>      
      	<property name="javax.persistence.jdbc.user" value="sa" />
      	<property name="javax.persistence.jdbc.password" value="" />
        
        <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
        <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        <property name="hibernate.show_sql" value="true" />
        <property name="hibernate.format_sql" value="true"/>

    </properties>
</persistence-unit>

</persistence>
